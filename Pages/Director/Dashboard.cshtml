@page
@model DashboardModel
<!-- Pages/Director/Dashboard.cshtml -->
<h2>Pending Enrollments</h2>

@if (!Model.Pending.Any())
{
}
else
{
    foreach (var p in Model.Pending)
    {
        <div style="border:1px solid #aaa; margin:10px; padding:10px;">
            <p><strong>@p.StudentName</strong> wants to join <strong>@p.CourseTitle</strong></p>
            <p>Applied: @p.AppliedAt</p>
            <form method="post" asp-page-handler="Approve" style="display:inline">
                <input type="hidden" name="id" value="@p.Id" />
                <button type="submit" style="background:green;color:white">Approve</button>
            </form>
            <form method="post" asp-page-handler="Deny" style="display:inline">
                <input type="hidden" name="id" value="@p.Id" />
                <button type="submit" style="background:red;color:white">Deny</button>
            </form>
        </div>
    }
}